
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcomeFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TextView
        android:id="@+id/WelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="15.3sp"
        android:shadowColor="@color/colorPrimaryShadow"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24.7sp"
        android:text="dsada"

        android:layout_marginTop="80dp"
        />

    <ImageView
        android:id="@+id/WelcomeImage"
        android:contentDescription="@string/welcomeImageDescription"
        android:layout_marginTop="20dp"
        android:layout_width="185dp"
        android:layout_height="172dp"
        android:layout_centerInParent="true"
        android:src="@null"

        android:layout_below="@id/WelcomeTitle"
        />

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="11.3sp"
        android:shadowColor="@color/colorPrimaryShadow"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18.7sp"
        android:layout_centerHorizontal="true"
        android:text="text"

        android:layout_below="@id/WelcomeImage"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryText"
        android:layout_above="@+id/welcomeButtonLayout"/>

    <RelativeLayout
        android:id="@+id/welcomeButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_marginStart="20dp"
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skipLinkText"
            android:background="#00ffffff"
            android:textColor="@color/colorPrimaryText" />
        <LinearLayout
            android:background="@color/colorTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:background="@color/colorTransparent"
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/nextLinkText"
            android:textColor="@color/colorPrimaryText"
            />
    </RelativeLayout>
</RelativeLayout>