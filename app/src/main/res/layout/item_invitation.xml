<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/transaction_background">

    <TextView
        android:id="@+id/invitation_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/nickName"
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/invitation_nickname_value" />

    <TextView
        android:id="@+id/invitation_nickname_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/invitation_nickname"
        app:layout_constraintTop_toTopOf="@id/invitation_nickname"
        app:layout_constraintBottom_toBottomOf="@id/invitation_nickname"
        tools:text="trugaaa" />

    <ImageView
        android:id="@+id/invitation_accept"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_accept"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/invitation_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/invitation_cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/invitation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/date"
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invitation_nickname"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/invitation_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        tools:text="Andrey Kolesnyk"
        android:textColor="@color/colorBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/invitation_date"
        app:layout_constraintTop_toBottomOf="@id/invitation_nickname"
        app:layout_constraintBottom_toBottomOf="@id/invitation_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>