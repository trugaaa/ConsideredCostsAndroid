<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/forbidden_image"
        android:layout_marginTop="42dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_forbidden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/forbidden_text"/>

    <TextView
        android:id="@+id/forbidden_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue"
        android:textSize="24sp"
        android:layout_marginBottom="42dp"
        android:text="@string/sorryDeveloping"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintTop_toBottomOf="@id/forbidden_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>